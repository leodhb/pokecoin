<h1>User#index</h1>
<p>Find me in app/views/user/index.html.erb</p>

<hr>
<h1><%= @user.full_name %></h1>
<h3><%= @user.email %></h3>

<table>
    <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Base XP</th>
        <th>Height</th>
        <th>Weight</th>
        <th>BuyBtn</th>
    </tr>

    <% @user.pokemons.each do |pokemon| %>
        <tr>
            <td><%= pokemon.name %></td>
            <td><img src="<%= pokemon.image %>" alt="<%= pokemon.name %>" width="60" height="60"></td>
            <td><%= pokemon.base_experience %></td>
            <td><%= pokemon.height %></td>
            <td><%= pokemon.weight %></td>
            <td><%= link_to "Sell for #{pokemon.price}", pokemon_show_path(pokemon.id)%></td>
        </tr>
    <% end %>
</table>

<p>balance: USD <%= @user.balance %> - <%= link_to "Add", user_add_path %></p>

<%= link_to "View transactions", user_transactions_path %>
<%= link_to 'Back', :back %>