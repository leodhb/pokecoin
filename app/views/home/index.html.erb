<section class="row align-items-center justify-content-center" id="header">
    <div class="col-lg-12 text-center">
        <h1>Trade Pokémons as NFT</h1>
        <%= link_to "Buy new Pokémon now!", pokemon_index_path, class: "btn btn-light btn-lg" %>
    </div>
</section>

